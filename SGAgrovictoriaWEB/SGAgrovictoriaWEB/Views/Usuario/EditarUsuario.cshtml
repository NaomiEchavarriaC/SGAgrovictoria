@model UsuarioModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Usuario</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditarUsuario">
                <input asp-for="IdCredencial" type="hidden" />

                <div class="form-group">
                    <label asp-for="IdEmpleado" class="control-label"></label>
                    <input asp-for="IdEmpleado" class="form-control" required />
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoCredencial" class="control-label"></label>
                    <select asp-for="IdTipoCredencial" class="form-control" required>
                        <option value="">Seleccione una opción</option>
                        <option value="1">Editor</option>
                        <option value="2">Admin</option>
                        <option value="3">Lector</option>
                    </select>
                    <span asp-validation-for="IdTipoCredencial" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" class="form-control" required>
                        <option value="">Seleccione un estado</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" required />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" class="form-control" required />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>

            

                <div class="form-group text-center">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="ConsultarUsuarios" class="btn btn-secondary">Volver a la lista de usuarios</a>
        </div>
    </div>
</div>

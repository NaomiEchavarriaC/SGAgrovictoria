@model UsuarioModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Crear Nuevo Usuario</h1>

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background: #1abc9c">
            <h4 class="mb-0">Información del usuario</h4>
        </div>
        <div class="card-body">
            <form asp-action="AgregarUsuario">
                <div class="form-group">
                    <label asp-for="IdEmpleado" class="control-label"></label>
                    <input asp-for="IdEmpleado" class="form-control" required />
                    <span asp-validation-for="IdEmpleado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdTipoCredencial" class="control-label"></label>
                    <select asp-for="IdTipoCredencial" class="form-control" required>
                        <option value="">Seleccione una opción</option>
                        <option value="1">Editor</option>
                        <option value="2">Admin</option>
                        <option value="3">Lector</option>
                    </select>
                    <span asp-validation-for="IdTipoCredencial" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                    <select asp-for="Estado" class="form-control" required>
                        <option value="">Seleccione un estado</option>
                        <option value="true">Activo</option>
                        <option value="false">Inactivo</option>
                    </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Usuario" class="control-label"></label>
                    <input asp-for="Usuario" class="form-control" required />
                    <span asp-validation-for="Usuario" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Clave" class="control-label"></label>
                    <input asp-for="Clave" type="password" class="form-control" required />
                    <span asp-validation-for="Clave" class="text-danger"></span>
                </div>


                <div class="form-group text-center">
                    <input type="submit" value="Agregar Usuario" class="btn btn-primary mb-4" />

                </div>
                <div class="card-footer text-center">
                    <a asp-action="ConsultarUsuarios" class="btn btn-secondary">Volver a la lista de usuarios</a>
                </div>
            </form>

            
        </div>
    </div>
</div>

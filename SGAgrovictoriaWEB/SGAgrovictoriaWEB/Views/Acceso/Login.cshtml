@model UsuarioModel

@{
	ViewData["Title"] = "InicioSesion";
	Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="auth-wrapper">
	<div class="auth-content text-center">
		<img src="assets/images/logo.png" alt="" class="img-fluid mb-4">
		<div class="card borderless">
			<div class="row align-items-center ">
				<div class="col-md-12">
					<div class="card-body">
						<h4 class="mb-3 f-w-400">INICIAR SESION</h4>
						<hr>

						<form action="@Url.Action("Login")" method="post">

							<div class="form-group">
								<label asp-for="Usuario" class="control-label"></label>
								<input asp-for="Usuario" class="form-control" required />
								<span asp-validation-for="Usuario" class="text-danger"></span>
							</div>
							<div class="form-group">
								<label asp-for="Clave" class="control-label"></label>
								<input asp-for="Clave" class="form-control" required />
								<span asp-validation-for="Clave" class="text-danger"></span>
							</div>
							@if (ViewData["Mensaje"] != null)
							{
								<div class="alert alert-danger" role="alert">
									@ViewData["Mensaje"]
								</div>
							}
							<div class="form-group text-center">
								<input type="submit" value="Iniciar sesión" class="btn btn-primary btn-lg" />
							</div>
						</form>
						
					</div>
				</div>
			</div>
		</div>
	</div>
</div>


@model ProveedorModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Editar Proveedor</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Información del Proveedor</h4>
        </div>
        <div class="card-body">
            <form asp-action="EditarProveedor">
                <input asp-for="IdProveedor" type="hidden" />

                <div class="form-group">
                    <label asp-for="NombreProveedor" class="control-label"></label>
                    <input asp-for="NombreProveedor" class="form-control" />
                    <span asp-validation-for="NombreProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionProveedor" class="control-label"></label>
                    <input asp-for="DescripcionProveedor" class="form-control" />
                    <span asp-validation-for="DescripcionProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group form-check">
                    <input type="checkbox" asp-for="Estado" class="form-check-input" />
                    <label asp-for="Estado" class="form-check-label"></label>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="RutaImagen" class="control-label"></label>
                    <input asp-for="RutaImagen" class="form-control" />
                    <span asp-validation-for="RutaImagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdDistrito" class="control-label"></label>
                    <input asp-for="IdDistrito" class="form-control" />
                    <span asp-validation-for="IdDistrito" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Guardar Cambios" class="btn btn-primary btn-lg" />
                </div>
            </form>
        </div>
        <div class="card-footer text-center">
            <a asp-action="ConsultarProveedores" class="btn btn-secondary">Volver a la lista de productos</a>
        </div>
    </div>
</div>

@model ProveedorModel

<div class="container mt-4">
    <h1 class="text-center mb-4">Crear Nuevo Proveedor</h1>

    <div class="card shadow-sm">
        <div class="card-header text-white" style="background: #1abc9c">
            <h4 class="mb-0">Información del Proveedor</h4>
        </div>
        <div class="card-body">
            <form asp-action="AgregarProveedor">
                <div class="form-group">
                    <label asp-for="NombreProveedor" class="control-label"></label>
                    <input asp-for="NombreProveedor" class="form-control" required />
                    <span asp-validation-for="NombreProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DescripcionProveedor" class="control-label"></label>
                    <input asp-for="DescripcionProveedor" class="form-control" required />
                    <span asp-validation-for="DescripcionProveedor" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefono" class="control-label"></label>
                    <input asp-for="Telefono" class="form-control" required />
                    <span asp-validation-for="Telefono" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Correo" class="control-label"></label>
                    <input asp-for="Correo" class="form-control" required />
                    <span asp-validation-for="Correo" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Estado" class="control-label"></label>
                        <select asp-for="Estado" class="form-control" required>
                            <option value="">Seleccione un estado...</option>
                            <option value="true">Activo</option>
                            <option value="false">Inactivo</option>
                        </select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="RutaImagen" class="control-label"></label>
                    <input asp-for="RutaImagen" class="form-control" required />
                    <span asp-validation-for="RutaImagen" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="IdDistrito" class="control-label"></label>
                    <input asp-for="IdDistrito" class="form-control" required />
                    <span asp-validation-for="IdDistrito" class="text-danger"></span>
                </div>

                <div class="form-group text-center">
                    <input type="submit" value="Agregar Proveedor" class="btn btn-primary mb-4" />

                </div>
                <div class="card-footer text-center">
                    <a asp-action="ConsultarProveedores" class="btn btn-secondary">Volver a la lista de productos</a>
                </div>
            </form>

            
        </div>
    </div>
</div>

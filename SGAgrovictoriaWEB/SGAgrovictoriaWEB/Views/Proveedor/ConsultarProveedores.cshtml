


@model List<ProveedorModel>



@{
    ViewData["Title"] = "Consultar Proveedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="text-center mt-5 mb-3">
    <h1>Lista de Proveedores</h1>
</div>

<div class="row">
    <div class="col-md-1">
    </div>
    <div class="col-md-10">
        <table id="Tabla" class="table table-hover">
            <thead>
                <tr>
                    <th>id</th>
                    <th>Nombre</th>
                    <th>Telefono</th>
                    <th>Correo</th>
                    <th>Ubicación</th>
                    <th>Estado</th>
                    <th>Actualizar</th>
                    <th>Detalles</th>
                    <th>Eliminar</th>
                </tr>
            </thead>
            <tbody>

                @if (Model.Any())
                {
                    @foreach (var proveedor in Model)
                    {
                       
                        <tr>
                            <td>@proveedor.IdProveedor</td>
                            <td>@proveedor.NombreProveedor</td>
                            <td>@proveedor.Telefono</td>
                            <td>@proveedor.Correo</td>
                            <td>@proveedor.IdDistrito</td>
                            
                                @if(@proveedor.Estado.Equals(true))
                                {
                                    <td>Activo</td>
                                }
                                else
                                {
                                    <td>Inactivo</td>
                                }
                            

                            <td>
                                 <a href="@Url.Action("EditarProveedor", new { Id = proveedor.IdProveedor })" class="btn btn-sm btn-primary"><i class="fa-solid fa-pen-to-square"></i></a>
                            </td>
                            <td>
                                                                <a href="@Url.Action("ConsultarProveedor", new { Id = proveedor.IdProveedor })" class="btn btn-sm btn-info"><i class="fa-solid fa-question-circle"></i></a>

                            </td>
                            <td>
                                                                <a href="@Url.Action("EliminarProveedor", new { Id = proveedor.IdProveedor })" class="btn btn-sm btn-danger"><i class="fa-solid fa-trash-can"></i></a>

                            </td>
                        </tr>
                        
                        
                    }
                }
                else
                {

                    <tr>
                        <td colspan="5" class="text-center">No hay proveedores disponibles.</td>
                    </tr>
                }
            </tbody>
        </table>
         <div class="text-center">
        <a href="@Url.Action("AgregarProveedor")" class="btn btn-block btn-primary mb-4">Agregar Proveedor</a>
    </div>
    </div>
    <div class="col-md-1">
    </div>


   

</div>



<script src="~/page/vendor/jquery/jquery.js"></script>
<script src="~/page/js/DataTable.js"></script>

@{
    ViewData["Title"] = "Reportes";
}


<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Formulario con Dropdowns y Botones</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .custom-dropdown .form-select {
            border-radius: 0.375rem;
            box-shadow: 0 0 0 1px rgba(0, 0, 0, 0.125);
        }
        .custom-dropdown .form-select:focus {
            box-shadow: 0 0 0 0.25rem rgba(0, 123, 255, 0.25);
            border-color: #007bff;
        }
    </style>
</head>
<body>
    <div class="container mt-5">
        <h2 class="mb-4">Opciones de reportes</h2>
        <form>
            <div class="mb-4">
                <label for="dropdown1" class="form-label">Selecciona un modulo</label>
                <div class="custom-dropdown">
                    <select class="form-select" id="dropdown1">
                        <option selected>Selecciona...</option>
                        <option value="1">Inventario</option>
                        <option value="2">Facturacion</option>
                        <option value="3">Contabilidad</option>
                        <option value="4">Usuarios</option>
                    </select>
                </div>
            </div>

            <div class="mb-4">
                <label class="form-label">Selecciona los atributos del reporte</label>
                <div class="d-flex flex-column gap-2 custom-checkbox">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox1">
                        <label class="form-check-label" for="checkbox1">
                            Opción 1
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox2">
                        <label class="form-check-label" for="checkbox2">
                            Opción 2
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox3">
                        <label class="form-check-label" for="checkbox3">
                            Opción 3
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox4">
                        <label class="form-check-label" for="checkbox4">
                            Opción 4
                        </label>
                    </div>
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="checkbox5">
                        <label class="form-check-label" for="checkbox5">
                            Opción 5
                        </label>
                    </div>
                </div>

            

            <div class="d-flex gap-3">
                <button type="button" class="btn btn-primary">Descargar como PDF</button>
                <button type="button" class="btn btn-secondary">Descargar como CSV</button>
                <button type="button" class="btn btn-success">Descargar como Excel</button>
            </div>
        </form>
    </div>

    <script src="https://stackpath.bootstrapcdn.com/bootstrap/5.3.0/js/bootstrap.bundle.min.js"></script>
</body>
</html>

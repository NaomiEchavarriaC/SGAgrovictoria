
@{
    ViewData["Title"] = "InicioSesion";
	Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="auth-wrapper">
	<div class="auth-content text-center">
		<img src="assets/images/logo.png" alt="" class="img-fluid mb-4">
		<div class="card borderless">
			<div class="row align-items-center ">
				<div class="col-md-12">
					<div class="card-body">
						<h4 class="mb-3 f-w-400">INICIAR SESION</h4>
						<hr>
						<div class="form-group mb-3">
							<input type="text" class="form-control" id="Email" placeholder="Correo">
						</div>
						<div class="form-group mb-4">
							<input type="password" class="form-control" id="Password" placeholder="Contraseña">
						</div>
						<a href="@Url.Action("PantallaPrincipal", "Inicio")" class="btn btn-block btn-primary mb-4">INGRESAR</a>
						<hr>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>

